<script> $(document).ready(function(){
      $('.slider').slider({full_width: true});
    });
</script>
<div class="slider">
  <ul class="slides">
    <li>
      <%= image_tag "home1.jpeg" %>
      <div class="caption center-align">
        <h1 class="black-text light">Welcome to GnarPow!</h1>
        <br>
        <h4 class="light black-text">Home of the gnarliest gear.</h4>
        <br>
        <br>
        <br>
        <% if current_admin? %>
          <%= link_to "SHOP", admin_items_path, class:"btn large" %>
        <% else %>
          <%= link_to "SHOP", items_path, class:"btn large" %>
        <% end %>
      </div>
    </li>
    <li>
      <%= image_tag "home2.jpeg" %>
      <div class="caption left-align">
        <h3></h3>
        <h3 class="light black-text">You don't wanna get stuck <br> up here without boots...</h3>
        <br>
        <%= link_to "SHOP BOOTS", "/categories/boots", class:"btn large" %>
      </div>
    </li>
    <li>
      <%= image_tag "home3.jpeg" %>
      <div class="caption right-align black-text">
        <h3>It's cold out there...</h3>
        <h5 class="light black-text">Get some sleeves!</h5>
        <br>
        <%= link_to "SHOP APPAREL", "/categories/apparel", class:"btn large" %>
      </div>
    </li>
    <li>
      <%= image_tag "home4.jpeg" %>
      <div class="caption center-align black-text">
        <h3>GnarPow!</h3>
        <h5 class="light black-text">Login and get shreddin!</h5>
        <br>
        <%= link_to "LOGIN", login_path, class:"btn large" %>
      </div>
    </li>
  </ul>
</div>
<div class="container">
  <h1>Today's Gnarliest Item!</h1>

  <div class="row center">
    <div class="col s6">
      <div class="row">
         <div class="col m12 m7">
           <div class="card">
             <div class="card-image aligh-center">
               <%= image_tag @featured_item.image.url %>
               <span class="card-title black"><%= @featured_item.name.upcase %></span>
             </div>
             <div class="card-content">
               <h5>Price: $<%= @featured_item.price %></h5>
             </div>
           </div>
         </div>
       </div>
    </div>
    <div class="col offset-s2 s3 center-align">
      <div class="center-align">
      <h3 class="grey-text center-align">Details</h3>
      <h4>Brand: <%= @featured_item.brand %></h4>
      <h6><%= @featured_item.description.capitalize %></h6>
      <% if current_admin? %>
      <%= link_to "Notify Users", admin_dashboard_index_path, class: "btn center-align orange" %>
      <% else %>
        <%= link_to "View Daily Deal", '/deal', class: "btn" %>
        <br>
        <%= link_to "Add To Cart", cart_items_path(item_id: @featured_item.id), method: :post %>
      <% end %>
      </div>
    </div>
  </div>
</div>
