<div class="col m4">
  <div class="card medium">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag item.image.url, class: "activator" %>
    </div>
    <div class="card-content" id="item_<%= item.id %>">
      <span class="card-title item-title activator grey-text text-darken-4"><%= item.name.upcase %><i class="material-icons right">more_vert</i></span>
      <p>Price: $<%= item.price %></p>
      <%= link_to 'View Item', item_path(item), class: "btn" %>
      <%= link_to "Add To Cart", cart_items_path(item_id: item.id), method: :post, class: "add-to-cart" %>
      <%= link_to "Remove Item", item_path(item), method: :delete, class: "add-to-cart" %>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Description: <i class="material-icons right">close</i></span>
      <p><%= item.description.capitalize %></p>
      <p>Price: $<%= item.price %></p>
      <p>Brand: <%= item.brand %></p>
    </div>
  </div>
</div>
