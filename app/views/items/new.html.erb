<%= form_for(@item) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :brand %>
  <%= f.text_field :brand %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :image %><br>
  <%= f.file_field :image %><br>
  <%= f.submit %>
<% end %>
